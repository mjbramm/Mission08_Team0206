@model TaskModel


<div class="container">
    <div class="row">
        <h2 class="text-center">Are You Sure You Want to Delete:</h2>
        <h5 class="text-center">@Model.TaskName</h5>
    </div>
    <div class="row">
        <div class="text-center">
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="TaskID" />
                <div class="buttons">
                    <button class="btn btn-danger" type="submit">Delete</button>
                    <a class="btn btn-secondary" asp-controller="Home" asp-action="Quadrants">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>